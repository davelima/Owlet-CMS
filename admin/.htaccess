RewriteEngine On
RewriteRule ^(.*?)\/(.*?)\/(.*?)/$ index.php?model=$1&action=$2&id=$3 [L]
RewriteRule ^(.*?)\/(.*?)/$ index.php?model=$1&action=$2 [L]

Options +FollowSymLinks
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)\/$ $1.php

<Files config.xml>
    Order Allow,Deny
    Deny from all
</Files>